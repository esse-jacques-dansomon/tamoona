{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

        <section class=" pt-8" style="background-color: #6f512f">

        </section>
        <section class="why-us pb-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-12 col-xs-12">
                </div>
                <div class="col-lg-6 col-md-12 col-xs-12">

                    <div class="login-content border p-4">
                        {% for flashError in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        <h3>Réinitialisez votre mot de passe</h3>


                        {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <p>
                                Entrez votre adresse e-mail et nous vous enverrons un
                                lien pour réinitialiser votre mot de passe.
                            </p>
                        </div>
                        <div class="form-btn text-center">
                            <button type="submit"  class="btn btn-large btn-block btn-primary mb-2 btn-submit" style="background-color: #162241!important;">Envoyer un e-mail de réinitialisation de mot de passe</button>
                        </div>
                        {{ form_end(requestForm) }}

                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-xs-12">
                </div>
            </div>
        </div>
    </section>
{% endblock %}






