<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <title>{% block title %}Travel Agency - Tamoona, votre travel planner!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/Tamoona-carré.png') }}"/>
    {% block stylesheets %}

        <!--Custom CSS-->
        <link href="{{ asset('/css/style.css') }}" rel="stylesheet" type="text/css"/>

        <!-- Bootstrap core CSS -->
        <link href="{{ asset('/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
    {% endblock %}
</head>
<body>
    <!-- login Starts -->
    <form method="POST">

    <section class="login">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-12 col-xs-12">
                </div>
                <div class="col-lg-6 col-md-12 col-xs-12">

                    <div class="login-content border p-4">
                        {% if error %}
                            <div class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3 alert alert-warning">
                                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
                        <h4 class="">Connectez-vous à votre compte</h4>
                            <div class="form-group">
                                <label class="">Votre Email</label>
                                <label for="inputEmail"></label><input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Enter email address">
                            </div>
                            <div class="form-group">
                                <label class="">Mot de passe</label>
                                <label for="inputPassword"></label><input type="password" name="password" id="inputPassword" autocomplete="current-password">
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>

                            <div class="form-group form-checkbox text-center mb-2">
                                <label>
                                    <input type="checkbox"  name="_remember_me">
                                </label> Garder ma session ouverte <a href="{{ path('app_forgot_password_request') }}" class="yellow">mot de passe oublié?</a>
                            </div>
                            <div class="form-btn text-center">
                                <button type="submit"  class="btn btn-large btn-block btn-primary mb-2 btn-submit">SE CONNECTER</button>
                            </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-xs-12">
                </div>
            </div>
        </div>
    </section>
    </form>

    <!-- Login Ends -->
{% block javascripts %}
    <script src="{{ asset('/js/jquery-3.5.1.min.js') }}"></script>
    <script src="{{ asset('/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>

</html>
