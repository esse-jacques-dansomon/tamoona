<!-- sidebar starts -->
<div class="col-lg-4 col-md-12">
    <div class="sidebar-sticky">
        <div class="list-sidebar">
            {% if categories %}
                <div class="sidebar-item mb-4">
                    <h4 class="">Toutes les  Categories</h4>
                    <ul class="sidebar-category">
                        <li><a href="{{ path('blog') }}" class="active">Toutes</a></li>
                        {% for Postcategory in categories %}
                            <li><a href="{{ path('blog_category', {"slug":Postcategory.slug}) }}">{{ Postcategory.title }}</a></li>
                        {%  endfor%}
                    </ul>
                </div>
            {% endif %}
            {% if tags %}
                <div class="sidebar-item mb-4">
                    <h4 class="">Tags</h4>
                    <ul class="sidebar-tags">
                        {% for tag in tags %}
                            <li><a href="{{ path('blog_tag', {"slug":tag.slug}) }}">{{ tag.name }}</a></li>
                        {%  endfor%}
                    </ul>
                </div>
            {% endif %}

        </div>
    </div>
</div>