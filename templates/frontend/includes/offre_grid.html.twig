{% if offers is defined  %}
<!-- blog starts -->
<section class="blog trending destination-b pb-6">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-xs-12 mb-4">
                <div class="trend-box">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="list-results d-flex align-items-center justify-content-between">

                            </div>
                        </div>
                        {% for offer in offers %}
                        <div class="col-lg-4 col-md-6 col-xs-12 mb-4">
                            <div class="trend-item">
                                <div class="trend-image">
                                    <img src="/images/offers/{{ offer.image }}" alt="image">
                                </div>
                                <div class="trend-content-main">
                                    <div class="trend-content">
                                        <div class="rating pb-1">
                                        </div>
                                        <h4><a href="{{ path('offre_detail', { slug : offer.slug }) }}">{{ offer.title }}</a></h4>
                                        <p class="mb-0 pink"><i class="fa fa-location-arrow mr-1"></i> {{ offer.destination }}
                                            <i class="fa fa-clock mr-1 ml-3"></i> {{offer.delaiAt|date("d M Y")  }}</p>
                                    </div>
                                    <div class="trend-last-main">
                                        <p class="mb-0 trend-para">{{ offer.description }}</p>
                                        <div class="trend-last d-flex align-items-center justify-content-between " style="background-color: #94703c">
                                            <p class="mb-0 white" ><i class="fa fa-info-o" aria-hidden="true"></i>
                                                <a href="{{ path('offre_detail', { slug : offer.slug }) }}" class="white">En Savoir Plus</a>
                                                 </p>
                                            <div class="trend-price">
                                                <p class="price white mb-0">fcfa <span class="font-weight-light">{{ offer.price }}</span></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}

                        {#
                        <div class="col-lg-12">
                            <div class="text-center">
                                <a href="#" class="nir-btn">Load More <i class="fa fa-long-arrow-alt-right"></i></a>
                            </div>
                        </div>
                        #}


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- blog Ends -->

