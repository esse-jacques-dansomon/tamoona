{% extends 'base.html.twig' %}

{% block body %}


    <!-- BreadCrumd starts -->
    {{ include('includes/bread_crumd.html.twig', {'page_name':'Article Detail'}) }}
    <!-- BreadCrumd starts -->


    <!-- blog starts -->
    <section class="blog blog-left">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-single">
                        <div class="blog-imagelist mb-3">
                            <img src="/images/articles/{{ article.image }}" alt="{{ article.title }}" width="100%">
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2">
                                <div class="date text-center bg-pink p-2">
                                    <h1 class="day mb-0 white">{{ article.createdAt|date("d") }}</h1>
                                    <div class="month white">{{ article.createdAt|date("M") }}</div>
                                </div>
                            </div>
                            <div class="col-lg-10 col-md-10">
                                <div class="blog-content mb-4 pt-0">
                                    <h3 class="blog-title"><a href="#" class="yellow">{{ article.title }}</a></h3>
                                    <div class="para-content mb-2">
                                        <span class="mr-2"><a href="#" class="tag pink"><i class="fa fa-tag mr-1"></i> Auteur </a></span>
                                        <span class="mr-2"><a href="#" class="pink"><i class="fa fa-user mr-1"></i> {{ article.author }}</a></span>
                                        <span><a href="#" class="pink"><i class="fa fa-comment"></i>  {{ article.comments|length }}</a></span>
                                    </div>
                                    <p class="mb-0">
                                        {{ article.content|raw }}
                                    </p>
                                </div>

                                <!-- blog share -->
                                <div class="blog-share d-flex justify-content-between align-items-center mb-4 bg-lgrey border">
                                    <div class="blog-share-tag">
                                        <ul class="inline">
                                            <li><strong>Categories:</strong></li>
                                            {% if article.postsCategory %}
                                            {% for category in article.postsCategory %}
                                            <li><a href="{{ path('blog_category', {"slug":category.slug}) }}">{{ category.title }}</a></li>
                                            {% endfor %}

                                            {% endif %}

                                        </ul>
                                    </div>
                                    <div class="header-social">
                                        <ul>
                                            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                            <li><a href="#"><i class="fab fa-google-plus-g"></i></a></li>
                                            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                            <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>



                        {% if article.comments %}
                        {% for comment in  article.comments %}
                            <!-- blog comment list -->
                            <div class="single-comments single-box mb-4">
                                <h4 class="mb-4">Commentaires</h4>
                                <div class="comment-box">
                                    <div class="comment-image mt-2">
                                        <img src="/images/reviewer/1.jpg" alt="image">
                                    </div>
                                    <div class="comment-content">
                                        <h4 class="mb-1 Soldman Kell">{{ comment.userName }}</h4>
                                        <p class="comment-date">{{ comment.createdAt|date("d D y") }}</p>
                                        <p class="comment">
                                            {{ comment.content }}
                                            </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        {% endif %}


                        <!-- blog review -->
                        <div class="row">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-8">
                                {{ form_start(commentForm) }}
                                <div class="">
                                    <h4 class="">laisser un commentaire </h4>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_row(commentForm.userName) }}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_row(commentForm.userEmail) }}
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                {{ form_row(commentForm.content) }}
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="comment-btn text-right mt-1">
                                                <input type="submit" class="btn btn-large btn-block btn-primary" id="submit" value="Envoyer ">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{ form_end(commentForm) }}
                            </div>
                            <div class="col-lg-2"></div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- blog Ends -->

{% endblock %}


